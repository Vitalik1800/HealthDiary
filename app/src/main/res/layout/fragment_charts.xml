<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="80dp">

            <TextView
                android:id="@+id/textSleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2e7d32"
                android:layout_marginTop="32dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartSleep"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="12dp"
                android:elevation="4dp"/>

            <TextView
                android:id="@+id/textMood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mood"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2e7d32"
                android:layout_marginTop="40dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartMood"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="12dp"
                android:elevation="4dp"/>

            <TextView
                android:id="@+id/textSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/steps"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2e7d32"
                android:layout_marginTop="40dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartSteps"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="12dp"
                android:elevation="4dp"/>

            <TextView
                android:id="@+id/textWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2e7d32"
                android:layout_marginTop="40dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartWeight"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="40dp"
                android:elevation="4dp"/>

        </LinearLayout>

    </ScrollView>


    <TextView
        android:id="@+id/textNoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_data"
        android:textSize="22sp"
        android:textStyle="italic"
        android:textColor="#2e7d32"
        android:padding="40dp"
        android:background="@drawable/rounded_no_data_bg"
        android:gravity="center"
        android:visibility="gone"/>

</RelativeLayout>